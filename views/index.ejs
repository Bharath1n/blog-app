<%-include("partials/header.ejs") %>
      <div  class="main-content">
        <div>
          <h2 class="heading">WELCOME TO THE BLOGS</h2>
    </div>
    <%if(locals.posts.length === 0) { %> 
      <div>
          <div class="back-img">
          </div>
          <a href="/new"><button class="add">Add New Post</button></a>
      </div>
    <%  }
    else {%>
          <% posts.forEach((post, index) => { %>
            <div class="blog">
                  <% if (post.image) { %>
                  <img src="/<%= post.image %>" alt="Post Image" style="max-width: 100%; height: auto;">
                  <% } %>
                  <h2><%= post.title %></h2>
                  <p><%= post.content %></p>
                  <div>
                  <a href="/edit/<%= index %>">Edit</a>
                  </div>
                  <div>
                  <a class="red" href="/delete/<%= index %>">Delete</a>
                  </div>
                </div>
          <% }); %>
          <a class="end" href="/new"><button class="add">Add New Post</button></a>
      </div>
   <% } %>
   
<%-include("partials/footer.ejs") %>